#:kivy 1.0
#:include addFishScreen/addfish.kv
#:include fishListScreen/fish.kv

ScreenManager:
    MenuScreen:
    AddFishScreen:
    FishListScreen:
        id: FishList

<MenuScreen>:
    name: 'menu'
    MDScreen:
        MDBoxLayout:
            orientation: "vertical"
            spacing: 10
            MDToolbar:
                title: "Nouvelle adresse"
                left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]
                md_bg_color: 113/255,171/255,89/255,1
            Widget:
                size_hint_y: None
                height: 60
            MDTextField:
                id: check_price
                size_hint_x: .5
                hint_text: root.hint_text
                icon_right: 'fish'
                icon_right_color: app.theme_cls.primary_color
                pos_hint: {'center_x': .5}
            MDRaisedButton:
                text: 'Check Price'
                pos_hint: {'center_x': 0.5}
                md_bg_color: app.theme_cls.primary_dark
                on_press: root.add_fish()
            #MDCard:
                #size_hint: None, None
                #size: "140dp", "180dp"
                #pos_hint: {"center_x": .5}
            MDLabel:
                id: fish_price_text
                font_style: "Button"
                font_size : 16
                halign: 'center'
        MDNavigationDrawer:
            id: nav_drawer
            BoxLayout:
                orientation:'vertical'
                spacing: 20
                padding: 10
                ScrollView:
                    MDList:
                        OneLineListItem:
                            text: 'Fish List'
                            on_release: app.root.current = 'fishlist'
                        OneLineListItem:
                            text: 'Check price'
                            on_release: app.root.current = 'menu'
                        OneLineListItem:
                            text: 'Add fish'
                            on_release: app.root.current = 'addfish'






    


