#:kivy 1.0

<SwipeToDeleteItem>:
    size_hint_y: None
    height: content.height

    MDCardSwipeLayerBox:
        padding: "8dp"
        MDIconButton:
            icon: "trash-can"
            pos_hint: {"center_y": .5}
            on_release: app.remove_item(root)
    FishListScreen:
        id: FishList

    MDCardSwipeFrontBox:
        TwoLineListItem:
            id: content
            _no_ripple_effect: True
            text: root.text
            secondary_text: root.secondary_text

<FishListScreen>:
    name: 'fishlist'
    MDScreen:
        MDBoxLayout:
            orientation: "vertical"
            spacing: 10
            MDToolbar:
                title: "Nouvelle adresse"
                left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]
                md_bg_color: 113/255,171/255,89/255,1   
            ScrollView:
                MDList:
                    id: container
        MDNavigationDrawer:
            id: nav_drawer
            BoxLayout:
                orientation:'vertical'
                spacing: 20
                padding: 10
                ScrollView:
                    MDList:
                        OneLineListItem:
                            text: 'Fish List'
                            on_release: app.root.current = 'fishlist'
                        OneLineListItem:
                            text: 'Check price'
                            on_release: app.root.current = 'menu'
                        OneLineListItem:
                            text: 'Add fish'
                            on_release: app.root.current = 'addfish'





